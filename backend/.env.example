# GAMEVAULT BACKEND ENVIRONMENT VARIABLES
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# Server Configuration
NODE_ENV=development
PORT=3000

# PostgreSQL Database
PGHOST=localhost
PGPORT=5432
PG_ENCRYPTION_SECRET=SuperStrongClassProjectSecretKey #generate secret with: openssl rand -hex 32
PGDATABASE=cs4389_Webstore
PGUSER=admin
PGPASSWORD=your_secure_database_password_here

# JWT Configuration (Authentication Tokens)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_here_use_crypto_to_generate
JWT_EXPIRES_IN=30d
JWT_COOKIE_EXPIRES_IN=30

# Session Configuration
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
SESSION_SECRET=your_session_secret_key_here_use_crypto_to_generate

# Security Settings
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:5173

# Rate Limiting (API DDoS Protection)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100


# NOTES for TEAM:
# - JWT_SECRET and SESSION_SECRET must be long random strings
# - BCRYPT_ROUNDS: Higher = more secure but slower (10-12 recommended)
# - CORS_ORIGIN: Frontend URL (update for production)
# - RATE_LIMIT_WINDOW_MS: Time window in milliseconds (900000 = 15 minutes)
# - RATE_LIMIT_MAX_REQUESTS: Max requests per IP in time window
